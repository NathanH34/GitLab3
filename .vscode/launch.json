{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Java",   //Name of 
            "type": "java",
            "request": "launch",    //Runs the program, can attach a debugger to it in vscode
            "externalConsole": true,                //user input dosen't work if set it to false ðŸ˜¦
            "stopOnEntry": false,       //Will allow user to enter args before program if true
            "preLaunchTask": "build",                 // Runs the task created above before running this configuration
            "jdkPath": "${env:JAVA_HOME}/build",        // You need to set JAVA_HOME enviroment variable
            "cwd": "${workspaceRoot}",      //Current working directory
            "mainClass": "${workspaceRoot}/build/classes/main/Author.class",
            "startupClass": "${workspaceRoot}${file}",
            "sourcePath": ["${workspaceRoot}/src"],   // Indicates where your source (.java) files are
            "classpath": ["${workspaceRoot}/build"],    // Indicates the location of your .class files
            "options": [],                             // Additional options to pass to the java executable
            "args": "${workspaceRoot}/const11.txt 100"                                // Command line arguments to pass to the startup class
        }

    ],
    "compounds": []
}